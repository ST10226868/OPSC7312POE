        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.OPSC7312POE"
        tools:targetApi="3">
        <activity
            android:name=".Language"
            android:exported="false" />
        <activity
            android:name=".Leaderboard"
            android:exported="false" />
        <activity
            android:name=".SnakeGameActivity"
            android:exported="false" />
        <activity
            android:name=".SnakeHomeActivity"
