<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    tools:context=".SnakeGameActivity">

    <Button
        android:id="@+id/score2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="score"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lilu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="150dp">

    </Button>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:background="@color/ButtonLight"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lilu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/score"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:background="@color/black"
            android:text="your score is"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            />


        <Button
            android:id="@+id/new_game"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="#DAE99C"
            android:backgroundTint="#DAE99C"
            android:text="New Game"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_above="@id/resume">

        </Button>

        <Button
            android:id="@+id/resume"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#DAE99C"
            android:text="Resume Game"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/resume"
            android:background="#DAE99C"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/playagain"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/resume"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:background="@color/red"
            android:text="Game Over ! Play Again"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/board"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_margin="5dp"
            android:background="#DAE99C"
            android:gravity="center"
            android:layout_centerInParent="true"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lilu"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Up Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/up"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/round_button_background"
                android:src="@drawable/arrow"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Left, Pause, Right Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button_background"
                android:src="@drawable/arrow"
                android:rotation="270"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button_background"
                android:src="@drawable/pause"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/right"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button_background"
                android:src="@drawable/arrow"
                android:rotation="90"
                android:scaleType="centerInside"/>
        </LinearLayout>

        <!-- Down Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/down"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/round_button_background"
                android:src="@drawable/arrow"
                android:rotation="180"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>